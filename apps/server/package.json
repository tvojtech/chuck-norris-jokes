{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "prettier": "bunx prettier . --write",
    "lint": "eslint ."
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/zod-adapter": "^1.131.32",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "dotenv": "^17.2.1",
    "hono": "^4.8.2",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
